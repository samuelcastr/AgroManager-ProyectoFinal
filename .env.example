
# ========================================
# DJANGO CORE
# ========================================
SECRET_KEY=changeme-to-a-secure-random-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.dev

# ========================================
# DATABASE
# ========================================
# Development (SQLite - local)
DATABASE_URL=sqlite:///db.sqlite3

# Production (PostgreSQL - Supabase, Neon, Railway)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Production (MySQL - PlanetScale, Railway, Clever Cloud)
# DATABASE_URL=mysql://user:password@host:3306/dbname

# ========================================
# JWT TOKENS
# ========================================
JWT_ACCESS_LIFETIME=60
JWT_REFRESH_LIFETIME=1

# ========================================
# CORS & SECURITY
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CSRF_TRUSTED_ORIGINS=http://localhost:8000

# HTTPS & Security (Producci√≥n)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ========================================
# EMAIL (OPCIONAL)
# ========================================
# Console backend (dev)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP backend (prod)
